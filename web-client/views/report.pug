doctype html
html
  head
    title!= title
    style
      include report.css
  body
    table.report-table
      caption Отчет по сменам
        tr
          th '#'
          th Коментарий
          th Начало
          th Конец
          th Принято
        each item, index in items
          tr
            td= index + 1
            td= item.comment
            td= formatDate(item.workedFrom)
            td= formatDate(item.workedTo)
            td= item.wasSigned ? '+' : '-'
